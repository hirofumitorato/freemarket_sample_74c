%header
  .header-inner
    .header-inner__box
      %h1.header-innder__box__logo
        = link_to "#" do
          = image_tag "/assets/logo.png"
      .header-inner__box__search
        %form
          %input.header-inner__box__search__input{placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .header-inner__box__search__input__icon
              = image_tag "/assets/icon-search 1.png"
    .header-inner__nav
      %ul.header-inner__nav__left
        %li.header-inner__nav__left__item
          = link_to "#" do
            カテゴリー
        %li.header-inner__nav__left__item
          = link_to "#" do
            ブランド
      %ul.header-inner__nav__right
        %li.header-inner__nav__right__item
          = link_to "#" do
            ログイン
        %li.header-inner__nav__right__item
          = link_to "#" do
            新規会員登録