%header
  .header-inner
    .header-inner__box
      %h1.header-innder__box__logo
        = link_to "#" do
          = image_tag "/logo.png"
      .header-inner__box__search
        %form
          %input.header-inner__box__search__input{placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .header-inner__box__search__input__icon
              = image_tag "/icon-search 1.png"
    .header-inner__nav
      %ul.header-inner__nav__left
        %li.header-inner__nav__left__item
          = link_to "#" do
            カテゴリー
        %li.header-inner__nav__left__item
          = link_to "#" do
            ブランド
      %ul.header-inner__nav__right
        - if user_signed_in?
          %li.header-inner__nav__right__item
            = link_to user_path(current_user) do
              マイページ
        - else
          %li.header-inner__nav__right__item
            = link_to new_user_session_path do
              ログイン
          %li.header-inner__nav__right__item
            = link_to new_user_path do
              新規会員登録